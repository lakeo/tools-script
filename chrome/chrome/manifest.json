{
  "manifest_version": 2,

  "name": "微博小助手-索尔眼镜出品",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "微博小助手"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://weibo.com/*","http://weibo.com/*"],
      "js": ["jquery-2.1.4.min.js","tool.js", "my.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "http://*/",
    "https://*/"
  ]
}
